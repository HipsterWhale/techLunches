<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4" id="login">

  <div class="row" style="margin-top: 15px; margin-bottom: 15px; text-align: center;">
    <%= image_tag 'logo.png', id: 'logo' %>
  </div>

  <% if @error %>
    <div class="alert alert-danger" role="alert"><%= @error %></div>
  <% end %>

  <ul class="nav nav-tabs nav-justified" style="margin-bottom: 10px;">
    <li class="active"><a data-toggle="tab" href="#signin">Se connecter</a></li>
    <li><a data-toggle="tab" href="#signup">S'inscrire</a></li>
  </ul>

  <div class="tab-content">
    <div id="signin" class="tab-pane fade in active">
      <%= form_tag '/login/sign_in', method: :post do %>
        <div class="form-group">
          <label>Booster ID : </label>
          <%= text_field_tag :booster_id, nil, class: 'form-control', placeholder: 'Booster ID'  %>
        </div>
        <div class="form-group">
          <label>Mot de passe : </label>
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Mot de passe' %>
        </div>
        <div style="text-align: right;">
          <button class="btn btn-success"><%= fa_icon 'sign-in' %>&nbsp;&nbsp;Se connecter</button>
        </div>
      <% end %>
    </div>
    <div id="signup" class="tab-pane fade">
      <%= form_for @new_user, url: '/login/sign_up', method: 'post' do |f| %>
        <div class="form-group">
          <label>Booster ID : </label>
          <%= f.text_field :booster_id, class: 'form-control', placeholder: '844242'  %>
        </div>
        <div class="form-group">
          <label>Pr√©nom : </label>
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'Arthur'  %>
        </div>
        <div class="form-group">
          <label>Nom : </label>
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Dent'  %>
        </div>
        <div class="form-group">
          <label>Mot de passe : </label>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Mot de passe' %>
        </div>
        <div class="form-group">
          <label>Confirmer le mot de passe : </label>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmer mot de passe' %>
        </div>
        <div style="text-align: right;">
          <button class="btn btn-success"><%= fa_icon 'user-plus' %>&nbsp;&nbsp;S'inscrire</button>
        </div>
      <% end %>
    </div>
  </div>



</div>